@model List<MongoDbProject.Dtos.CustomerDtos.ResultCustomerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MongoLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Müşteriler</h5>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ad Soyad</th>
                            <th scope="col">Şehir</th>
                            <th scope="col">Mail</th>
                            <th scope="col">Telefon</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                        @foreach (var item in Model)
                        { 
                             count ++;
                            <tr>
                                <td>@count</td>
                                <td>@item.CustomerNameSurname</td>
                                <td>@item.CustomerCity</td>
                                <td>@item.CustomerMail</td>
                                <td>@item.CustomerPhone</td> 
                                <td><a href="/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-success">Güncelle</a></td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<a href="/Customer/CreateCustomer" class="btn btn-dark">Müşteri Ekle</a>
