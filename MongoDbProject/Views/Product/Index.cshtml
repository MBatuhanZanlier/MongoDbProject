@model List<ResultProductsWithCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MongoLayout.cshtml";
    int count = 0;
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Ürünler</h5>
            <a href="/Product/GetProductwithCategoryList" class="btn btn-primary mb-3">PDF İndir</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ürün Adı</th>
                            <th scope="col">Stok</th>
                            <th scope="col">Fiyat</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td> 
                                <td>@item.Name</td>
                                <td>@item.Stock</td>
                                <td>@item.Price</td>
                                <td>@item.Category.CategoryName</td>
                                <td><a href="/Customer/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Customer/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a></td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<a href="/Product/CreatProduct" class="btn btn-dark">Yeni Ürün Ekle</a>

