@model GetByIdProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_MongoLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Müşteri  Ekleme</div>
            <hr>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="input-6">Ürün Adı</label>
                    <input type="text" class="form-control form-control-rounded" asp-for="Name" placeholder="Lütfen Ad Soyadınızı giriniz">
                </div>
                <div class="form-group">
                    <label for="input-7">Adet</label>
                    <input type="text" class="form-control form-control-rounded" asp-for="Stock" placeholder="Lütfen Şehirinizi Giriniz">
                </div>
                <div class="form-group">
                    <label for="input-8">Fiyat</label>
                    <input type="text" class="form-control form-control-rounded" asp-for="Price" placeholder="Lütfen Telefon Numaranızı Giriniz">
                </div>
                <label>Kategori Seçiniz</label>
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Categories, "Seçiniz...", new { @class = "form-control" })
                <br />
                <label>Ürün Resmi</label>
                <input type="file" class="form-control border" asp-for="ImageUrl" />
                <br />
             
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-light btn-round px-5"><i class="icon-lock"></i>Ürünü Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>

